<mah:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="CopyPlusPlus.MainWindow"
    Title="Copy++ 精简版"
    Height="190"
    Width="400"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    ShowActivated="False"
    Closed="MainWindow_Closed"
    Closing="MainWindow_Closing">

    <Grid Margin="12">
        <StackPanel>
            <TextBlock Text="按住 Control，连续按 C 两次以上（Ctrl+C+C...）"
                       FontFamily="Microsoft YaHei UI"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,10" />

            <mah:ToggleSwitch x:Name="SwitchMain"
                              MinWidth="0"
                              ContentDirection="LeftToRight"
                              Content="合并换行"
                              FontFamily="Microsoft YaHei UI"
                              FontWeight="Bold"
                              ContentPadding="0,0,-10,0"
                              IsOn="True" />

            <mah:ToggleSwitch x:Name="SwitchSpace"
                              MinWidth="0"
                              ContentDirection="LeftToRight"
                              Content="去除空格"
                              FontFamily="Microsoft YaHei UI"
                              FontWeight="Bold"
                              ContentPadding="0,0,-10,0"
                              Margin="0,6,0,0" />

            <mah:ToggleSwitch x:Name="SwitchAutoStart"
                              MinWidth="0"
                              ContentDirection="LeftToRight"
                              Content="开机启动（后台静默）"
                              FontFamily="Microsoft YaHei UI"
                              FontWeight="Bold"
                              ContentPadding="0,0,-10,0"
                              Margin="0,6,0,0"
                              Toggled="SwitchAutoStart_OnToggled" />

            <TextBlock Text="关闭窗口会隐藏到托盘；右键托盘可禁用/退出。"
                       FontFamily="Microsoft YaHei UI"
                       FontSize="11"
                       Opacity="0.7"
                       Margin="0,12,0,0" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
